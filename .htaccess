# Force HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Force non-www
RewriteCond %{HTTP_HOST} ^www\.testmykeyboard\.online [NC]
RewriteRule ^(.*)$ https://testmykeyboard.online/$1 [L,R=301]

# Prevent directory listing
Options -Indexes

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
